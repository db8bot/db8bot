    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js",
            "runtimeVersion": "16"
        },
        {
            "name": "node: server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "doppler",
            "runtimeArgs": [
                "run",
                "--",
                "node",
                "index.js"
            ]
        }
    ]
}